<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_margin="32dp"
    android:orientation="vertical">

    <EditText
        android:id="@+id/txtNombrePilotoCocheViewModel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:ems="10"
        android:hint="@string/nombre_piloto"
        android:inputType="text" />

    <EditText
        android:id="@+id/txtModeloCocheViewModel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:ems="10"
        android:hint="@string/modelo"
        android:inputType="text" />

    <EditText
        android:id="@+id/txtVueltasCompletadasCocheViewModel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:ems="10"
        android:hint="@string/vueltas_completadas"
        android:inputType="text" />

    <TextView
        android:id="@+id/lblCifrasCocheViewModel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/lblExcesoVueltasCocheViewModel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>